import requests, os, time, socket, json

# Renkler
class Renk:
    YEŞİL = '\033[92m'
    KIRMIZI = '\033[91m'
    SARI = '\033[93m'
    MAVİ = '\033[96m'
    BİTİR = '\033[0m'

# 50+ site listesi
siteler = {
